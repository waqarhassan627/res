@{
    ViewBag.Title = "My Quiz";
}
@model List<projectWork.Models.TestQuestionsDTO>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Quiz - Questionnaire</title>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/lib/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Slabo+27px|Oswald:400,300,700|Poiret+One' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/Quiz.css")">
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/css/themes/flat-blue.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Content("~/Main/Home")" style="font-family: 'Poiret One', cursive; font-size: 32px;">
                    <div class="icon"></div>
                    <div class="title" style="color:white">Questionnaire</div>
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse " aria-expanded="true">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="@Url.Content("~/Users/MyResults")">My Results</a></li>
                    <li><a href="@Url.Content("~/Users/UniStudentHome")">Home</a></li>
                    <li><a href="@Url.Content("~/Users/Logout")">Logout</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>
    <section>
        <div class="container" style="margin-top: 80px">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10 box-area">
                    <h1 class="text-center">Quiz</h1>
                    <h4 class="text-center description">Each question carries one mark.</h4>
                    <hr>
                    <form method="post" action="@Url.Content("~/Users/Result")">
                        <input type="hidden" value="@Model[0].TestID" name="tid" />

                        @{
                            int i = 1;
                            foreach (var Q in Model)
                            {
                                <div class="form-group">
                                    <span id="qNo" class="QuestionNo">Question-@i: </span>
                                    <span id="statement" class="QuestionSt">@Q.Statement</span><br>
                                    <input type="radio" class="radios" name="@Q.StID" value="@Q.OptA"> <span class="options">@Q.OptA</span><br>
                                    <input type="radio" class="radios" name="@Q.StID" value="@Q.OptB"> <span class="options">@Q.OptB</span><br>
                                    <input type="radio" class="radios" name="@Q.StID" value="@Q.OptC"> <span class="options">@Q.OptC</span><br>
                                    <input type="radio" class="radios" name="@Q.StID" value="@Q.OptD"> <span class="options">@Q.OptD</span><br>
                                </div>
                                i++;
                            }
                        }
                        <input type="submit" class="form-control btn btn-primary" name="Submit" value="Submit">
                    </form>

                </div>
            </div>
        </div>
    </section>


    <footer>
        <div class="container">

            Copyright&copy; by <a>Questionnaire</a>. All rights reserved.

        </div>
    </footer>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script type="text/javascript" src="~/Content/MainPage/lib/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/MainPage/lib/js/bootstrap.min.js"></script>
</body>
</html>


