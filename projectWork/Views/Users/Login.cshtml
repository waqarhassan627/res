@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - Questionnaire</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Fonts 
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300,400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>-->
    <!-- CSS Libs -->
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/lib/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/lib/css/bootstrap-switch.min.css">
    <!-- CSS App -->
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/css/themes/flat-blue.css">
</head>
<body class="flat-blue login-page">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Content("~/Main/Home")" style="font-family: 'Poiret One', cursive; font-size: 32px;">
                    <div class="icon"></div>
                    <div class="title" style="color:white;">Questionnaire</div>
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse " aria-expanded="true">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="@Url.Content("~/Users/SignUp")">Sign Up</a></li>
                    <li><a href="@Url.Content("~/Main/Home")">Home</a></li>
                    <li><a href="#">Login</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>
    <div class="container">
        <div class="login-box">
            <div>
                <div class="login-form row">
                    <div class="col-sm-12 text-center login-header">
                        <h4 style="font-size:2.2em;">Questionnaire</h4>
                        <h4 style="font-size:1.0em;">Login here</h4>
                    </div>
                    <div class="col-sm-12">
                        <div class="login-body">
                            <form method="post" action="@Url.Content("~/Users/verifyLogin")">
                                <div class="control">
                                    <input type="text" name="Username" class="form-control" placeholder="Enter you username" />
                                </div>
                                <div class="control">
                                    <input type="password" name="Password" class="form-control" placeholder="Enter your password" />
                                </div>
                                <div class="login-button text-center">
                                    <input type="submit" class="btn btn-primary" value="Login">
                                </div>
                                <h5 class="text-center text-danger" >@ViewBag.msg</h5>
                            </form>
                        </div>
                        <div class="login-footer">
                            <span class="text-right"><a href="Home#Contact">Forgot password? CONTACT US.</a></span>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>