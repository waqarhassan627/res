 @{
    ViewBag.Title = "FillTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Fill Test- Questionnaire</title>
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/MainPage/css/themes/flat-blue.css">
</head>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Content("~/Main/Home")" style="font-family: 'Poiret One', cursive; font-size: 32px;">
                <div class="icon"></div>
                <div class="title" style="color:white;">Questionnaire</div>
            </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse " aria-expanded="true">
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="@Url.Content("~/Teacher/CreateTest")">Create Test</a></li>
                <li><a href="@Url.Content("~/Teacher/CreateTest")">Home</a></li>
                <li><a href="@Url.Content("~/Teacher/Logout")">Logout</a></li>
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
</nav>
<section>
    <div class="container" style="margin-top:80px">
        <div class="row">
            <div class="col-md-12 box-area">
                <h2>Enter MCQ statements</h2>
                <p class="text-info">
                    Each MCQ must have atleast two options. <br>
                    After entering the statement and the options, press <span class="label label-primary">Save</span> to move onto next one.<br>
                    And when done with the questions, press <span class="label label-primary">Submit</span> to be done
                </p>
                <form method="post" action="@Url.Content("~/Teacher/EnterQuestion")">
                    <h3 id="TestId">EAD-Quiz4</h3>
                    <h4 id="QuestionNo">Question-1</h4>
                    <div class="form-group">
                        <textarea name="Statement" class="form-control" id="Statement" placeholder="What does EAD stand for?"></textarea>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <div class="col-md-2"><input type="text" class="form-control" name="A" placeholder="Option-A"></div>
                        <div class="col-md-2"><input type="text" class="form-control" name="B" placeholder="Option-B"></div>
                        <div class="col-md-2"><input type="text" class="form-control" name="C" placeholder="Option-C"></div>
                        <div class="col-md-2"><input type="text" class="form-control" name="D" placeholder="Option-D"></div>
                        <div class="col-md-2"><input type="text" class="form-control" name="CorrectOpt" placeholder="Correct Options"></div>
                        <div ><input type="hidden" name="tid" value="@ViewBag.tid"></div>
                    </div>
                    <input id="btnSave" type="submit" class="btn btn-lg btn-primary" value="Save Question"/>
                    <a id="btnSubmit" role="button" class="btn btn-lg btn-primary" href="@Url.Content("~/Teacher/Home")">Submit Test</a>
                    <button type="reset" class="btn btn-lg btn-danger">Reset</button>
                </form>
            </div>
        </div>
    </div>
</section>